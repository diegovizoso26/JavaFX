            </ImageView>
         </graphic>
        </Button>
        <Button mnemonicParsing="false" onAction="#eliminar">
         <graphic>
            <ImageView fitHeight="85.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../img/eliminar.png" />
               </image>
            </ImageView>
         </graphic>
        </Button>
      <Button fx:id="reportes" mnemonicParsing="false" onAction="#mostrarPantalla" prefHeight="37.0" prefWidth="45.0">
