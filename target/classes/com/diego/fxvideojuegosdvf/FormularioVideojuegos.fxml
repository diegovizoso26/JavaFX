               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font></CheckBox>
               <CheckBox fx:id="XBox" text="X-Box" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <padding>
                  <Insets left="5.0" />
               </padding>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font></CheckBox>
               <CheckBox fx:id="NintendoSwitch" styleClass="CheckBox2" text="Nintendo Switch" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="3">
