        <Label text="PEGI" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="4">
         <font>
            <Font size="18.0" />
         </font></Label>
        <ComboBox fx:id="pegi" maxWidth="300.0" prefWidth="300.0" promptText="Selecciona el PEGI del juego" GridPane.columnIndex="1" GridPane.rowIndex="4">                
            <items>
           <FXCollections fx:factory="observableArrayList">
          <String fx:value="PEGI 3" />
          <String fx:value="PEGI 6" />
          <String fx:value="PEGI 12" />
