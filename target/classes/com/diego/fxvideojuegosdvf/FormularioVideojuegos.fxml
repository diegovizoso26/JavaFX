      </Label>
      <TextField fx:id="url" maxWidth="300.0" prefWidth="250.0" promptText="Introduce la URL de la imagen del juego" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <ImageView fx:id="portadaJuego" fitHeight="235.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="7" GridPane.rowIndex="2" GridPane.rowSpan="6" />
      <columnConstraints>
