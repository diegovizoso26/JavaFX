        </padding>

        <Label style="-fx-background-color: transparent;" styleClass="bordeLabel" text="Nombre" textFill="WHITE" GridPane.rowIndex="2">
         <font>
            <Font size="18.0" />
         </font></Label>
        <TextField fx:id="nombre" maxWidth="300.0" prefHeight="25.0" prefWidth="374.0" promptText="Introduce el nombre del juego" GridPane.columnIndex="1" GridPane.rowIndex="2" />
          
        <Label text="Descripcion" textFill="WHITE" GridPane.rowIndex="3">
         <font>
            <Font size="18.0" />
         </font></Label>
