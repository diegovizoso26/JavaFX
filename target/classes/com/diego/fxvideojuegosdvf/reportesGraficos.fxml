<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="letraForm" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.diego.fxvideojuegosdvf.ReportesGraficosController">
    <children>
        <Button fx:id="btnVideojuegos" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#mostrarPantalla">
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../img/volver.png" />
               </image>
            </ImageView>
         </graphic>
        </Button>
        
        <StackPane layoutX="86.0">
            <PieChart fx:id="chart" layoutX="44.0" title="Juegos por PEGI"/>
        </StackPane>
      <Button fx:id="btnRefresh" layoutX="14.0" layoutY="54.0" mnemonicParsing="false" onAction="#cargarDatosEnElChart">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <graphic>
            <ImageView fitHeight="38.0" fitWidth="26.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../img/refresh.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
        
    </children>
</AnchorPane>
